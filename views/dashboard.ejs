    <script>
        $(document).ready(function() {
            $("#calendar").evoCalendar({
                calendarEvents: [{
                        id: 'bHay68s', // (required)
                        name: "New Year", //  (required)
                        date: "January/1/2020", //(required)
                        type: "holiday", // (required)
