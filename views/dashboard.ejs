                // "stime": "12:20",
                // "etime": "12:20",
                // "date": "30 Jan 2023"
                // },
            });
        })
        var array = '<%- JSON.stringify(array)%>'
        var data = JSON.parse(array)
        var today = new Date()
        var test = new Date("2023-03-31")
        console.log(test);
        var upcoming = []
        var past = []
        var todayL = []

        data.forEach(event => {
            com = new Date(event.date)
            if ((today.getDate() == com.getDate()) && (today.getMonth() == com.getMonth()) && (today.getFullYear == com.getFullYear)) {
                todayL.push(event)
            } else if (today < com) {
                upcoming.push(event)

            } else {
                past.push(event)
            }

        });

        function load() {
            up = document.getElementById('upcoming')
            output = ""
            upcoming.forEach(element => {
                output += ` <div id="event">
                            <p>name: ${element.name}</p>
                            <p>location: ${element.location}</p>
                            <p>date: ${element.date}</p>
                        </div>`
            });
            up.innerHTML = output
            p = document.getElementById('past')
            output = ""
            past.forEach(element => {
                output += ` <div id="event">
                            <p>name: ${element.name}</p>
                            <p>location: ${element.location}</p>
                            <p>date: ${element.date}</p>
                        </div>`
            });
            p.innerHTML = output
            t = document.getElementById('today')
            output = ""
            todayL.forEach(element => {
                output += ` <div id="event">
                            <p>name: ${element.name}</p>
                            <p>location: ${element.location}</p>
                            <p>date: ${element.date}</p>
                        </div>`
            });
            t.innerHTML = output
        }

        function ref(params) {
            switch (params) {
                case 'pri':
                    location.href = '/private'
                    break;
                case 'pub':
                    location.href = '/public'

                    break;
                default:
                    break;
            }
        }
